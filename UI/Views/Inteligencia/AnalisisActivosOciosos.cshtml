@model X.PagedList.PagedList<BE.RecomendacionBE>

@using X.PagedList.Mvc
@using X.PagedList.Mvc.Common

@{
    Dictionary<string, BE.IdiomaTraduccionBE> Traducciones = (Dictionary<string, BE.IdiomaTraduccionBE>)Session["Traducciones"];
    ViewBag.Title = Traducciones["Recomendaciones"].Texto;
}

<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">@Traducciones["Recomendaciones"].Texto</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group me-2">
                @using (Html.BeginForm())
                {
                    <div class="btn-group me-2">
                        <span>
                            @Traducciones["Buscar"].Texto @Html.TextBox("Dato_Buscar", ViewBag.ValorFiltro as string, new { @autocomplete = "off", @autofocus = "" })

                        </span>
                    </div>
                }
                <a>@Html.ActionLink(@Traducciones["Nuevo"].Texto, "Create", "Recomendacion", null, new { @class = "btn btn-sm btn-outline-secondary", @type = "button" })</a>
                <button type="button" class="btn btn-sm btn-outline-secondary">@Traducciones["Exportar"].Texto</button>
            </div>

        </div>
    </div>
    <div class="container-fluid">



        <table class=" table table-hover">
            <thead>
                <tr>

                    <th>
                        @Traducciones["Descripcion"].Texto
                    </th>
                    <th>
                        @Traducciones["FechaCreacion"].Texto
                    </th>
                    <th>
                        @Traducciones["FechaModificacion"].Texto
                    </th>

                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Hallazgo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Difucultad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Propuesta)
                    </td>

                </tr>
            }

        </table>

        <div class="pagination">
            @Html.PagedListPager(Model, pagina => Url.Action("AnalisisActivosOciosos", new { pagina, Valor_Filtro = ViewBag.ValorFiltro }),
            new PagedListRenderOptions
            {
                DisplayLinkToIndividualPages = true,
                DisplayPageCountAndCurrentLocation = false,
                MaximumPageNumbersToDisplay = 8,
                LiElementClasses = new string[] { "page-item" },
                PageClasses = new string[] { "page-link" },
            })
        </div>
    </div>

</main>





<script>

    window.onload = function () {
        document.getElementById('int-collapse').className = 'show';
        document.getElementById('ActOc').className = 'btn-activo';
    };
</script>

