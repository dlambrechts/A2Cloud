@model BE.BackupBE
@{
    Dictionary<string, BE.IdiomaTraduccionBE> Traducciones = (Dictionary<string, BE.IdiomaTraduccionBE>)Session["Traducciones"];
    ViewBag.Title = Traducciones["RestaurarDb"].Texto;
}
<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">@Traducciones["RestaurarDb"].Texto</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group me-2">
                <a>@Html.ActionLink(@Traducciones["Volver"].Texto, "Backup", "Db", null, new { @class = "btn btn-sm btn-outline-secondary", @type = "button" })</a>

            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="alert alert-danger" role="alert" style="max-width:400px;">
            @Traducciones["ConfirmarRestaurarDb"].Texto
        </div>
        <div>


            <dl class="dl-horizontal">
                <dt>
                    @Traducciones["FechaCreacion"].Texto
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.FechaCreacion)
                </dd>


                <dt>
                    @Traducciones["Nombre"].Texto
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Nombre)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <br />
                <div class="form-actions no-color">
                    <input type="submit" value="@Traducciones["Restaurar"].Texto" class="btn btn-danger" />

                </div>
            }
        </div>

    </div>

</main>