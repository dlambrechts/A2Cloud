

@{

    var Permisos = (List<string>)Session["Permisos"];

}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">


    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            user-select: none;
        }

        @@media (min-width: 768px) {
            .bd-placeholder-img-lg {
                font-size: 3.5rem;
            }
        }
    </style>
    <link href="~/Content/sidebars.css" rel="stylesheet">

</head>
<body>

    <header class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">

        @Html.ActionLink("A2Cloud", "Index", "Home", null, new { @class = "navbar-brand col-md-3 col-lg-2 me-0 px-3" })

        <button class="navbar-toggler  d-md-none collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="btn-group">
            <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                @if (Session["NombreCompleto"] != null)
                {@Session["NombreCompleto"].ToString()}
            </button>
            <ul class="dropdown-menu dropdown-menu-end">
                <li><a class="dropdown-item" href="#">Cambiar Idioma</a></li>
                <li><a class="dropdown-item" href="#">Ver Perfil</a></li>
                <li><a class="dropdown-item" href="#">Otra Opción</a></li>
                <li><hr class="dropdown-divider"></li>
                <li>@Html.ActionLink("Logout", "Logout", "Login", null, new { @class = "dropdown-item" })</li>
            </ul>
        </div>
    </header>

    <div class="container-fluid">
        <div class="row">
            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                <div class="flex-shrink-0 p-3 ">

                    <ul class="list-unstyled ps-0">
                        <li class="mb-1">
                            <button class="btn btn-toggle align-items-center rounded collapsed" data-bs-toggle="collapse" data-bs-target="#activos-collapse" aria-expanded="true">
                                Gestión de Activos
                            </button>
                            <div class="collapse" id="activos-collapse">
                                <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
                                    <li><a href="#" class="link-dark rounded">Activos</a></li>
                                    <li><a href="#" class="link-dark rounded">Componentes de Hardware</a></li>
                                    <li><a href="#" class="link-dark rounded">Asignación de Perfiles de Hardware</a></li>
                                    <li><a href="#" class="link-dark rounded">Asignación de Activos</a></li>
                                </ul>
                            </div>
                        </li>
                        <li class="mb-1">
                            <button class="btn btn-toggle align-items-center rounded collapsed" data-bs-toggle="collapse" data-bs-target="#licencias-collapse" aria-expanded="false">
                                Gestión de Licencias
                            </button>
                            <div class="collapse" id="licencias-collapse">
                                <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
                                    <li><a href="#" class="link-dark rounded">Productos de Software</a></li>
                                    <li><a href="#" class="link-dark rounded">Contratos de Licencia</a></li>
                                    <li><a href="#" class="link-dark rounded">Asignación de Licencias</a></li>

                                </ul>
                            </div>
                        </li>
                        <li class="mb-1">
                            <button class="btn btn-toggle align-items-center rounded collapsed" data-bs-toggle="collapse" data-bs-target="#org-collapse" aria-expanded="false">
                                Organización
                            </button>
                            <div class="collapse" id="org-collapse">
                                <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
                                    <li><a href="#" class="link-dark rounded">Configurar</a></li>
                                    <li><a href="#" class="link-dark rounded">Colaboradores</a></li>
                                    <li><a href="#" class="link-dark rounded">Departamentos</a></li>
                                </ul>
                            </div>
                        </li>
                        <li class="mb-1">
                            <button class="btn btn-toggle align-items-center rounded collapsed" data-bs-toggle="collapse" data-bs-target="#presup-collapse" aria-expanded="false">
                                Presupuesto
                            </button>
                            <div class="collapse" id="presup-collapse">
                                <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
                                    <li><a href="#" class="link-dark rounded">Estimación de Presupuesto</a></li>
                                </ul>
                            </div>
                        </li>
                        <li class="mb-1">
                            <button class="btn btn-toggle align-items-center rounded collapsed" data-bs-toggle="collapse" data-bs-target="#int-collapse" aria-expanded="false">
                                Gestión Inteligente de Activos
                            </button>
                            <div class="collapse" id="int-collapse">
                                <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
                                    <li><a href="#" class="link-dark rounded">Análisis de Activos Ociosos</a></li>
                                    <li><a href="#" class="link-dark rounded">Análisis de Colaborador Vs Recursos</a></li>
                                    <li><a href="#" class="link-dark rounded">Optimización de Asignaciones</a></li>
                                </ul>
                            </div>
                        </li>

                        <li class="border-top my-3"></li>
                        <li class="mb-1">
                            <button class="btn btn-toggle align-items-center rounded collapsed" data-bs-toggle="collapse" data-bs-target="#account-collapse" aria-expanded="false">
                                Gestión de Usuarios
                            </button>
                            <div class="collapse" id="account-collapse">
                                <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">

                                    @{ if (Permisos.Exists(per => per.ToString() == "GestionUsuarios"))

                                        {<li>@Html.ActionLink("Usuarios", "Index", "Usuario", null, new { @class = "link-dark rounded", @id = "Usuarios" })</li>}
                                    }

                                    @{ if (Permisos.Exists(per => per.ToString() == "GestionPerfilUsuario"))

                                        { <li><a href="~/Usuario" class="link-dark rounded">Permisos de Usuario</a></li>}
                                    }

                                    @{ if (Permisos.Exists(per => per.ToString() == "GestionPerfilUsuario"))

                                        { <li>@Html.ActionLink("Grupo de Permisos", "GrupoPermisos", "Permisos", null, new { @class = "link-dark rounded", @id = "Grupos" })</li>}
                                    }


                                </ul>
                            </div>
                        </li>
                        <li class="mb-1">
                            <button class="btn btn-toggle align-items-center rounded collapsed" data-bs-toggle="collapse" data-bs-target="#idioma-collapse" aria-expanded="false">
                                Gestión de Idiomas
                            </button>
                            <div class="collapse" id="idioma-collapse">
                                <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
                                    <li><a href="#" class="link-dark rounded">Idiomas</a></li>
                                    <li><a href="#" class="link-dark rounded">Traducciones</a></li>
                                </ul>
                            </div>
                        </li>
                        <li class="mb-1">
                            <button class="btn btn-toggle align-items-center rounded collapsed" data-bs-toggle="collapse" data-bs-target="#db-collapse" aria-expanded="false">
                                Gestión de Base de Datos
                            </button>
                            <div class="collapse" id="db-collapse">
                                <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
                                    <li><a href="#" class="link-dark rounded">Copias de Seguridad</a></li>
                                    <li><a href="#" class="link-dark rounded">Restaurar</a></li>
                                    <li><a href="#" class="link-dark rounded">Verificación de Integridad</a></li>
                                </ul>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>
            @RenderBody()

        </div>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>


